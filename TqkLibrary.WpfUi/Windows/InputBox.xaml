<Window x:Class="TqkLibrary.WpfUi.Windows.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TqkLibrary.WpfUi.Windows"
        mc:Ignorable="d" Loaded="Window_Loaded"
        Title="Input Box" Height="112" Width="234" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBox x:Name="Tb" Height="23" Margin="10,10,10,0" TextWrapping="Wrap" TextAlignment="Center" Text="TextBox" VerticalAlignment="Top" KeyDown="Tb_KeyDown"/>
        <Button x:Name="Add" Content="Thêm" HorizontalAlignment="Left" Margin="10,0,0,10" Width="75" Height="20" VerticalAlignment="Bottom" Click="Add_Click"/>
        <Button x:Name="Cancel" Content="Cancel" Margin="0,0,10,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="Cancel_Click"/>

    </Grid>
</Window>
